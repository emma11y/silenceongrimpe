{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/server",
    "target": "ES2022",
    "module": "es2022",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "files": ["src/main.server.ts"],
  "include": [
    "src/app/**/*.ts",
    "src/environments/**/*.ts",
    "src/core/**/*.ts",
    "src/shared/**/*.ts"
  ],
  "exclude": ["src/test.ts", "src/**/*.spec.ts", "src/**/*.worker.ts"]
}
